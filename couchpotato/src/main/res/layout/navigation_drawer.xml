<com.f2prateek.couchpotato.ui.NavigationDrawer
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/holo_gap"
    android:columnCount="2"
    android:background="@color/drawer_background">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/launcher_name"
      android:drawableLeft="@drawable/ic_launcher"
      android:layout_columnSpan="2"
      android:layout_gravity="start|end"
      android:gravity="center"
      style="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"/>

  <TextView
      android:layout_columnSpan="2"
      android:layout_gravity="start|end"
      android:text="@string/couchpotato"
      style="@style/Widget.CouchPotato.Drawer.Header"/>

  <LinearLayout
      android:id="@+id/couchpotato_section"
      android:layout_columnSpan="2"
      android:layout_gravity="start|end"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/couchpotato_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/library"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/ic_action_tags"
        android:drawablePadding="2dp"
        style="?android:buttonBarButtonStyle"/>

  </LinearLayout>

  <TextView
      android:layout_columnSpan="2"
      android:layout_gravity="start|end"
      android:text="@string/browse"
      style="@style/Widget.CouchPotato.Drawer.Header"/>

  <LinearLayout
      android:id="@+id/tmdb_drawer"
      android:layout_columnSpan="2"
      android:layout_gravity="start|end"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tmdb_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/explore"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/ic_action_ticket"
        android:drawablePadding="2dp"
        style="?android:buttonBarButtonStyle"/>

  </LinearLayout>

</com.f2prateek.couchpotato.ui.NavigationDrawer>