<resources>

  <style name="None">
  </style>

  <!-- Base application theme. -->
  <style name="Theme.CouchPotato" parent="android:Theme.Holo">
    <item name="android:windowBackground">@drawable/app_background</item>
    <item name="android:progressBarStyle">@style/Widget.CouchPotato.ProgressBar</item>
  </style>

  <style name="Theme.CouchPotato.NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBarOverlay">true</item>
  </style>

  <style name="Theme.CouchPotato.TransparentActionBar">
    <item name="android:actionBarStyle">@style/ActionBar.Solid.CouchPotato.Transparent</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="ActionBar.Solid.CouchPotato.Transparent"
      parent="@android:style/Widget.Holo.ActionBar.Solid">
    <item name="android:background">@null</item>
    <item name="android:icon">@drawable/ic_transparent</item>
    <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
    <item name="android:titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
  </style>

  <style name="ActionBarStyle.Transparent.TitleTextStyle"
      parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Widget.CouchPotato.ProgressBar" parent="None">
    <item name="android:indeterminateDrawable">@drawable/indeterminate_progress</item>
    <item name="android:indeterminateOnly">true</item>
    <item name="android:indeterminateBehavior">repeat</item>
    <item name="android:indeterminateDuration">900</item>
    <item name="android:minWidth">32dp</item>
    <item name="android:maxWidth">32dp</item>
    <item name="android:minHeight">32dp</item>
    <item name="android:maxHeight">32dp</item>
  </style>

  <style name="Widget.CouchPotato.GalleryImage" parent="None">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">15sp</item>
  </style>

  <style name="Widget.CouchPotato.Drawer.Header" parent="None">
    <item name="android:paddingBottom">2dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">13sp</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:background">@drawable/drawer_header_divider</item>
  </style>

  <style name="Widget.CouchPotato.Drawer.RowWidget" parent="None">
    <item name="android:minHeight">26dp</item>
    <item name="android:layout_marginTop">4dp</item>
  </style>

  <style name="Widget.CouchPotato.Drawer.RowWidget.Title">
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Widget.CouchPotato.Drawer.RowWidget.Value">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">16sp</item>
  </style>

</resources>
