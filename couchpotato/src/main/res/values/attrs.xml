<resources>

  <declare-styleable name="ForegroundAspectRatioImageView">
    <attr name="android:foreground"/>
    <attr name="aspectRatio" format="float"/>
    <attr name="aspectRatioEnabled" format="boolean"/>
    <attr name="dominantMeasurement">
      <enum name="width" value="0"/>
      <enum name="height" value="1"/>
    </attr>
  </declare-styleable>

  <declare-styleable name="FloatLabelLayout">
    <attr name="floatLabelTextAppearance" format="reference"/>
    <attr name="floatLabelSidePadding" format="reference|dimension"/>
  </declare-styleable>

  <attr name="ratingViewStyle" format="reference"/>

  <declare-styleable name="RatingView">
    <attr name="textMargin" format="dimension"/>
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension"/>
    <attr name="textBackgroundColor" format="color"/>
    <attr name="circleStrokeWidth" format="dimension"/>
    <attr name="maxValue" format="integer"/>
    <attr name="circleColor" format="color"/>
    <attr name="circleBackgroundColor" format="color"/>
  </declare-styleable>
</resources>