<resources>

  <!--
      Parent style for custom buttons.
  -->
  <style name="CustomButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
    <item name="android:gravity">center</item>
  </style>

  <!-- Style for the "sign in" buttons displayed in the Authenticator Activity. -->
  <style name="CustomButton.SignIn">
  </style>

  <!--
      Parent style for custom buttons that are backed by an image.
  -->
  <style name="CustomButton.Image">
    <item name="android:scaleType">center</item>
  </style>

  <!-- Text styles -->
  <style name="TextAppearance" parent="@android:style/TextAppearance">
  </style>

  <style name="TextAppearance.Title">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">2</item>
  </style>

  <style name="TextAppearance.Runtime">
    <item name="android:textSize">@dimen/text_size_small</item>
  </style>

  <style name="TextAppearance.Rating">
    <item name="android:textSize">@dimen/text_size_small</item>
  </style>

  <style name="TextAppearance.Genres">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textStyle">italic</item>
    <item name="android:maxLines">1</item>
  </style>

  <style name="TextAppearance.Plot">
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>

  <style name="TextAppearance.Movie">
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>

  <style name="TextAppearance.Movie.Tagline">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="TextAppearance.Movie.Genre">
  </style>

  <style name="TextAppearance.Movie.Cast">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:maxLines">2</item>
  </style>

  <style name="TextAppearance.Movie.Directors">
  </style>

  <style name="TextAppearance.Movie.Writers">
  </style>

  <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/transparent_action_bar_color</item>
  </style>

  <style name="Widget.ActionBar.Transparent">
    <item name="android:background">@android:color/transparent</item>
  </style>

</resources>