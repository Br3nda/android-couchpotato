<com.f2prateek.couchpotato.ui.widgets.NotifyingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/movie_backdrop"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/action_bar_gradient"/>

      <TextView android:id="@+id/movie_tagline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:paddingLeft="@dimen/default_padding_small"
          android:paddingRight="@dimen/default_padding_small"
          style="@style/TextAppearance.Movie.Tagline"
          android:background="@drawable/text_background"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/default_padding"
        android:paddingLeft="@dimen/default_padding"
        android:paddingTop="@dimen/default_padding_small"
        android:orientation="vertical">

      <TextView android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?android:attr/listSeparatorTextViewStyle"
          android:text="@string/movie_plot_label"/>

      <TextView android:id="@+id/movie_plot"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.Movie"/>

      <TextView android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?android:attr/listSeparatorTextViewStyle"
          android:text="@string/movie_genre_label"/>

      <TextView android:id="@+id/movie_genres"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.Movie.Genre"/>

      <TextView android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?android:attr/listSeparatorTextViewStyle"
          android:text="@string/movie_cast_label"/>

      <TextView android:id="@+id/movie_cast"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.Movie.Cast"/>

      <TextView android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?android:attr/listSeparatorTextViewStyle"
          android:text="@string/movie_directors_label"/>

      <TextView android:id="@+id/movie_directors"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.Movie.Directors"/>

      <TextView android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?android:attr/listSeparatorTextViewStyle"
          android:text="@string/movie_writers_label"/>

      <TextView android:id="@+id/movie_writers"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.Movie.Writers"/>

      <TextView android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?android:attr/listSeparatorTextViewStyle"
          android:text="@string/movie_runtime_label"/>

    </LinearLayout>

  </LinearLayout>

</com.f2prateek.couchpotato.ui.widgets.NotifyingScrollView>