<com.f2prateek.couchpotato.ui.widgets.NotifyingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/movie_backdrop"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/action_bar_gradient"/>

      <TextView android:id="@+id/movie_tagline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:paddingLeft="@dimen/default_padding_small"
          android:paddingRight="@dimen/default_padding_small"
          style="@style/TextAppearance.Movie.Tagline"
          android:background="@drawable/text_background"/>

    </FrameLayout>

    <include layout="@layout/movie_info_layout"/>

  </LinearLayout>

</com.f2prateek.couchpotato.ui.widgets.NotifyingScrollView>